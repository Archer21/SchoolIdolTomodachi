body
  font-family 'Maven Pro', sans-serif

.border
  border 1px solid red

.Container
  background-image url('background-winter.png')
  background-repeat no-repeat
  background-size cover
  background-position 50%
  
  &-navigationContainer
    width 60%

  

#header-container
  height 3em

.FilterMenu

  margin-top 3em

  &-title
    background-color: #cd0063;
    color: #fff;
    padding: 0.5em;
    font-weight: normal;

  &-searchBoxContainer
    margin-left: auto;
    margin-right: auto;
    padding: 0 1em;
    
.SearchBox

  &-search
    color: #E6006F;
    width: 100%;
    box-sizing: border-box;

.FilterBox
  padding: 0 1em;
  box-sizing: border-box;


.FilterIdol

  &-button
    width: 100%;
    text-align: left;
    padding: 0 .5em;
    color: #B30056;
    margin: .5em 0;
    box-shadow: 0px 0px 10px rgba(0,0,0,0.3);
  

.StatBox

  &-items
    display: flex;
    flex-wrap: wrap;
  
  &-imageContainer
    width: 20%;
    padding: 1em 1.5em 0 0;
    box-sizing: border-box;
  
  &-image
    width: 100%;

  
.CheckBox
  display: flex;
  justify-content: space-between;
  align-items: center;

  &-text
    color: white;
  

.ChooseBox

  &-options
    display: flex;
    justify-content: space-around;
    width: 75%;

  &-option
    color: white;
    border: 3px solid #aaa;
    padding: .3em;
    font-size: .9em;
    border-radius: 50%;
    cursor: pointer;

.SelectBox

  &-options
    box-shadow: 0px 0px 10px rgba(0,0,0,0.3);
    color: #CD0063;
    font-size: 0.9em;
    width: 100%;

.GroupBox

  &-groups
    display: flex;
    flex-wrap: wrap;