@import './styles/normalize'
@import './styles/reset'
@import './styles/Helpers'
@import './styles/Components/Header'
@import './styles/Components/Logo'
@import './styles/Components/Navigation'
@import './styles/Components/Avatar'
@import './styles/Components/Layout'
@import './styles/Components/InfoBox'
@import './styles/Components/PresentBox'
@import './styles/Components/Slider'

body
  font-family 'Maven Pro', sans-serif

.border
  border 1px solid red

.Container
  background-color darkred
  
  &-navigationContainer
    width 60%


.Main
  width 80%
  margin 0 auto
  padding 1em
  box-sizing border-box
  border-radius 0.5em
  background-color white


.Menu
  display flex
  background-color #ff3396
  border-radius .5em
  overflow hidden
  
  &-item
    flex-grow 1
  
    &hover
      background-color $primaryColor
  
  &-link
    color white
    display block
    text-align center
    padding .5em 0


.CommentMenu
  display flex
  background-color transparent  
  
  &-link
    color #d3d3d3
    display block
    text-align center
    padding 0.5em 0
    flex-grow 1


.CommentBox
  display flex
  padding 1em 0
  border-bottom 1px dashed gray
  align-items start

  &-avatarContainer
    width 15%
    min-width 15%
    margin-right 1.5em

.Avatar
    width 100%
    overflow hidden
    border-radius 0.2em
    border-radius 50%

  &-image
    width 100%

.Comment
  font-size .9em

  &-date
    display block
    color lightgray

  &-user
    font-weight bold
  
  &-content
    margin 0 0 2em 0