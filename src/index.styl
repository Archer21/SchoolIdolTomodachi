@import './styles/normalize'
@import './styles/reset'
@import './styles/Helpers'
@import './styles/Components/Header'
@import './styles/Components/Logo'
@import './styles/Components/Navigation'
@import './styles/Components/Avatar'
@import './styles/Components/Layout'
@import './styles/Components/InfoBox'
@import './styles/Components/PresentBox'
@import './styles/Components/Slider'

body
  font-family: 'Maven Pro', sans-serif;

.border
  border 1px solid red

.Container
  background-color darkred
  
  &-navigationContainer
    width 60%


.Main
  width: 80%;
  margin: 0 auto;
  padding: 1em;
  box-sizing: border-box;
  border: 1px solid white;
  border-radius: .5em;


.Menu
  display: flex;
  background-color: #ff3396;
  border-radius: .5em;
  
  &-item
    flex-grow: 1;
  
    &:hover
      background-color $primaryColor
  
  &-link
    color: white;
    display: block;
    text-align: center;
    padding: .5em 0;


.CommentBox

  &-avatarContainer
    width 20%

.Avatar

  &-image
    width 100%