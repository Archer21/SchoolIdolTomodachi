body
  font-family 'Maven Pro', sans-serif

.border
  border 1px solid red

.Container
  background-color darkred
  
  &-navigationContainer
    width 60%


.Right
  position fixed
  width 40%
  height 100%
  bottom 0
  right 0

  &-favoriteIdolContainer
    height: 100%;
    max-width: 85%;
    max-height: 100%;
    margin: 0 auto;
  
  &-followBoxContainer
    width: 70%;
    margin: 0 auto;
    position: relative;
    bottom: 25%;
    border-radius: .5em;
    overflow: hidden;

.FavoriteIdol
  background-image: url("./../assets/maki2Cover.png");
  background-repeat: no-repeat;
  height: 100%;
  background-size: 150%;
  background-position: left 10px bottom 10%;
  background-position-x: 50%;

.FollowBox
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 1em;

  &-link
    font-size: 1.3em;
    text-align: center;
  
  
  



