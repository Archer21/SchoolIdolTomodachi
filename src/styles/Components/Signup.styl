.Signup
  margin: 0 3em;
  text-align: center;
  padding: 2em;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  top: 15%;
  background-color: rgba(238,238,238, 0.8);
  height: 70%;
  box-sizing: border-box;
  border-radius: 1em;

  &-title
    font-size: 3em;
    margin-bottom: 1em;

  &-inputContainer
    margin: 1em 0;
    display: flex;
    justify-content: space-between;
    align-items: center;