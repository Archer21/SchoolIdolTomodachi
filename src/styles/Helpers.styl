$primaryColor = #E6006F
$secondaryColor = #FFAC18
$title = #FFFFFF
$primaryText = #FFFFFF
$secondaryText = lightgray

.link
  color $primaryColor

.line
  display inline-block
  vertical-align middle

.buttonBox
  padding .5em

.box
  margin 1em 0

.subtitle
  color white
  font-size .9em
  font-weight normal

.button
    background-color #CD0063
    border 1px solid #9A004A
    padding 0.5em 1em
    color white
    text-align center

.boxShadow
  box-shadow 0px 0px 10px rgba(0,0,0,0.3)

.form
  display flex
  flex-direction column
  margin 0 auto
  width 60%

.labelBox
    margin-left 3em
  
.input
    box-shadow 0 0 0px #0098EB
    border 3px solid #0098EB
    padding .5em
    border-radius .5em
    width 60%
